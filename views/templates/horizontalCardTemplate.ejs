<div class="container my-4">
    <div class="row flex-nowrap overflow-auto gx-1">
        <% recipes.forEach((recipe) => { %>
            <div class="col-12 col-md-4 col-lg-3 mb-1">
                <div class="card" style="width: 95%;">
                    <img src="<%= recipe.strMealThumb %>" class="card-img-top" alt="<%= recipe.strMeal %>">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Name: </strong><%= recipe.strMeal %></h5>
                        <p class="card-text"><strong>Type: </strong><%= recipe.strCategory %></p>
                        <button class="btn btn-outline-warning">Meal details</button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>