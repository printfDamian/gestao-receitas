<div class="row mb-3">
    <h1> <% recipe.strMeal %></h1>
    <div class="col-md-6">
        <h5 class="text-muted">Category: <%= recipe.strCategory %></h5>
        <h5 class="text-muted">Area: <%= recipe.strArea %></h5>
    </div>
    <div class="col-md-6 text-end">
        <% if (recipe.strYoutube) { %>
            <a href="<%= recipe.strYoutube %>" target="_blank" class="btn btn-danger">
                <i class="bi bi-youtube"></i> Watch Tutorial
            </a>
        <% } %>
    </div>
</div>

<h3 class="mt-4">Ingredients</h3>
<div class="row">
    <% for(let i = 1; i <= 20; i++) { 
        const ingredient = recipe['strIngredient' + i];
        const measure = recipe['strMeasure' + i];
        if(ingredient && ingredient.trim() !== '') { %>
            <div class="col-md-4 mb-2">
                <span class="badge bg-primary me-2"><%= measure %></span>
                <%= ingredient %>
            </div>
    <% } } %>
</div>

<h3 class="mt-4">Instructions</h3>
<div class="card">
    <div class="card-body">
        <p class="text-break"><%= recipe.strInstructions %></p>
    </div>
</div>
</div>
</div>
</div>