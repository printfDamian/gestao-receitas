<section class="content">
	<div class="auth-container position-absolute top-50 start-50 translate-middle">
		<img class="authLogoGR" src="/images/GR-Logo.svg" alt="GR">
		<form id="auth-form" class="m-2" action="/login" method="POST">
	
			<h2>Login</h2>
	
			<div class="form-row align-items-center">
	
				<div class="my-1">
					<label class="sr-only" for="inlineFormInputGroupEmail">Email</label>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text">@</div>
						</div>
						<input type="email" required class="form-control" name="email" id="inlineFormInputGroupEmail" placeholder="john.doe@example.com" />
					</div>
				</div>
	
				<div class="my-1">
					<label class="sr-only" for="inlineFormInputPassword">Password</label>
					<input type="password" required class="form-control" name="password" id="inlineFormInputPassword" placeholder="********" />
				</div>
	
				<div class="col-auto my-1">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" name="remember" id="autoSizingCheck2" />
						<label class="form-check-label" for="autoSizingCheck2">
							Remember me
						</label>
					</div>
				</div>
	
				<div class="form-footer col-auto my-1 mt-3">
					<a href="/register">Register if you dont have an account</a>
					<button type="submit" class="btn btn-primary register-submit">Submit</button>
				</div>
				
			</div>

		</form>
	</div>
</section>
